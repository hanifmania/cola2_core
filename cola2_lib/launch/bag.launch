<!-- THIS LAUNCH FILE IS INTENDED TO BE USED FROM THE NODE cola2_lib bag_node.py -->
<launch>
    <arg name="vehiclename" default="g500"/>
    <node name="record_g500_bags" output="screen" pkg="rosbag" type="record" args="
        -a -x '/stereo_camera(.*)|/octo(.*)|/camera(.*)'
        --split --size 2048 -o $(env HOME)/$(arg vehiclename)" />

    <node name="record_g500_image" output="screen" pkg="rosbag" type="record" args="
        /pose_ekf_slam/odometry
	    /camera/camera_info
	    /camera/image_raw
        /stereo_camera/left/camera_info
        /stereo_camera/left/image_raw
        /stereo_camera/right/camera_info
        /stereo_camera/right/image_raw
        --split --size 2048 -o $(env HOME)/$(arg vehiclename)_image" />
</launch>
